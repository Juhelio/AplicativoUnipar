            </StackLayout>        
            
                <Button Text="Sair" VerticalOptions="EndAndExpand" Margin="10,30" TextColor="Red" BorderColor="Red" BackgroundColor="White" BorderWidth="2" CornerRadius="20" Clicked="Button_Clicked"/>
