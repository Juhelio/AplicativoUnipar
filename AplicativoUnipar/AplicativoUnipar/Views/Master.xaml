             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicativoUnipar.Views.Master"
             Title="Master">


    <ContentPage.Content>
        <StackLayout BackgroundColor="White">

            <Frame BackgroundColor="Red" VerticalOptions="Start"  >
                <StackLayout>
                    
                    <Label Text="UniparEAD"  HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
                    
                </StackLayout>
            </Frame>
            <StackLayout Padding="5,10">
                <Button Text="Matérias" TextColor="Red" BorderColor="Red" BackgroundColor="White" BorderWidth="2" CornerRadius="20" Margin="10, 0"/>
